{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {# Flash messages #}
    {% for label, messages in app.flashes %}
        <div class="container mt-3">
            <div class="alert alert-{{ label }} alert-dismissible fade show text-center" role="alert">
                {% for message in messages %}
                    {{ message }}
                {% endfor %}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    {% endfor %}

    {# Login form #}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-user-circle me-2"></i>Connexion
                        </h1>
                    </div>
                    <div class="card-body p-4">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                        {# Username field #}
                        <div class="mb-3">
                            {{ form_label(form.username, 'Identifiant :', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Votre identifiant'}}) }}
                            {% for message in app.flashes('errorUser') %}
                                <div class="invalid-feedback d-block">
                                    <i class="fas fa-exclamation-circle me-1"></i>
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>

                        {# Password field #}
                        <div class="mb-4">
                            {{ form_label(form.password, 'Mot de passe :', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe'}}) }}
                            {% for message in app.flashes('errorPWD') %}
                                <div class="invalid-feedback d-block">
                                    <i class="fas fa-exclamation-circle me-1"></i>
                                    {{ message }}
                                </div>
                            {% endfor %}
                        </div>

                        {# Submit button #}
                        <div class="d-grid">
                            {{ form_widget(form.button, {
                                'label': 'Se connecter',
                                'attr': {'class': 'btn btn-primary'}
                            }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}