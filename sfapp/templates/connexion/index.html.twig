{% extends 'base.html.twig' %}

{% block title %}Connection{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/connexion.css') }}">
{% endblock %}

{% block body %}
    <div class="connection">
        <h1 class="title">Connection</h1>
        <div class="form">
            {{ form_start(form) }}
            {{ form_label(form.identifiant, 'Identifiant :') }}<br>
            {{ form_widget(form.identifiant) }}
            <br>
            {{ form_label(form.motdepasse, 'Mot de passe :') }}<br>
            {{ form_widget(form.motdepasse) }}
            <br>
            {{ form_row(form.bouton, {
                'label': 'Se connecter'
            }) }}

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}