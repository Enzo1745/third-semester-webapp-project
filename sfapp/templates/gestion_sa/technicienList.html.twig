{% extends 'base.html.twig' %}

{% block title %}Gestion des systèmes d'acquisition{% endblock %}

{% block body %}
    <div class="container-fluid bg-primary bg-gradient text-white py-4 mb-4 shadow">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 mb-0"><i class="fas fa-microchip me-2"></i> Systèmes d'acquisition</h1>
                <!-- Add SA button -->
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addSAModal">
                    <i class="fas fa-plus me-2"></i> Ajouter un Système d'Acquisition
                </button>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Table of the SAs -->
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-primary text-white">
                        <tr>
                            <th>Système d'acquisition</th>
                            <th>Salle associée</th>
                            <th>Détails Salle</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% if saList is empty %}
                        <div class="alert alert-info m-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i> Aucun système d'acquisition n'est disponible.
                        </div>
                        {% else %}
                        {% for sa in saList %}
                            <tr>
                                <td>{{ sa.id }}</td>
                                <td>
                                    {% if sa.room is not null %}
                                        {{ sa.room.roomName }}
                                    {% else %}
                                        <span class="text-muted">Aucune</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if sa.room is not null %}
                                        <a href="{{ path('app_room_info_technicien', { 'roomName': sa.room.roomName}) }}"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye me-1"></i> Voir détails
                                        </a>
                                    {% else %}
                                        <span class="text-muted">Non applicable</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <p class="card-text value state
                                            {% if sa.state.value == 'Fonctionnel' %}
                                                good-text
                                            {% elseif sa.state.value == 'En panne' %}
                                                danger-text
                                            {% elseif sa.state.value == 'Disponible' %}
                                                available-text
                                            {% elseif sa.state.value == 'En attente' %}
                                                warning-text
                                            {% else %}
                                                muted-text
                                            {% endif %}">
                                        {{ sa.getStateName() }}
                                    </p>
                                </td>
                                <td class="text-center">
                                    <!-- Delete -->
                                    <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal{{ sa.id }}">
                                        <i class="fas fa-trash-alt me-2"></i> Supprimer
                                    </button>
                                </td>
                            </tr>

                            <!-- Modal to confirm deleting -->
                            <div class="modal fade" id="confirmDeleteModal{{ sa.id }}" tabindex="-1" aria-labelledby="confirmDeleteModalLabel{{ sa.id }}" aria-hidden="true">
                                <div class="modal-dialog">
                                    <form action="{{ path('app_sa_delete', {id: sa.id}) }}" method="post">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="confirmDeleteModalLabel{{ sa.id }}">Confirmation de suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                                            </div>
                                            <div class="modal-body">
                                                Êtes-vous sûr de vouloir supprimer ce système d'acquisition ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <button type="submit" class="btn btn-danger">Confirmer</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- End of deleting modal   -->
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    <!-- Modal to add a SA -->
    <div class="modal fade" id="addSAModal" tabindex="-1" aria-labelledby="addSAModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <form action="{{ path('app_add_sa') }}" method="post">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="addSAModalLabel">Ajouter un Système d'Acquisition</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        <p>Êtes-vous sûr de vouloir ajouter un nouveau système d'acquisition ?</p>
                        <p>Les détails du système seront attribués automatiquement.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success">Ajouter</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

{% endblock %}
