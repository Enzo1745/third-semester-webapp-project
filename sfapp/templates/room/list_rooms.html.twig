{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/list_rooms.css') }}">
{% endblock %}

{% block body %}
    {# Main header section with gradient background #}
    <header class="bg-primary bg-gradient text-white py-4 mb-4 shadow">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0 fw-bold">
                <i class="fas fa-building me-2"></i> Liste des salles
            </h1>
            <div>
                <a href="/charge/salles/ajouter" class="btn btn-outline-light me-2">
                    <i class="fas fa-plus-circle me-1"></i> Ajouter une salle
                </a>
                <a href="/charge/gestion_sa" class="btn btn-outline-light">
                    <i class="fas fa-link me-1"></i> Associer/Dissocier SA
                </a>
            </div>
        </div>
    </header>

    {# Flash messages #}
    {{ block('flash_messages') }}

    {# Search/Filter form section #}
    <div class="container mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-search text-primary me-2"></i>
                    <h5 class="card-title mb-0">Filtrer</h5>
                </div>
                {{ form(form) }}
            </div>
        </div>
    </div>

    {# Main content - Rooms table #}
    <div class="container">
        <div class="card shadow-sm">
            {# Table header #}
            <div class="card-header bg-primary text-white py-3">
                <div class="row">
                    <div class="col-4 text-center fw-bold">
                        <i class="fas fa-door-open me-2"></i>Salles
                    </div>
                    <div class="col-4 text-center fw-bold">
                        <i class="fas fa-info-circle me-2"></i>Détails
                    </div>
                    <div class="col-4 text-center fw-bold">
                        <i class="fas fa-trash-alt me-2"></i>Supprimer
                    </div>
                </div>
            </div>

            {# Table body #}
            <div class="card-body p-0">
                {% if rooms is empty %}
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-inbox fa-2x mb-3"></i>
                        <p>Aucune salle n'est disponible.</p>
                    </div>
                {% else %}
                    {% for room in rooms %}
                        <div class="row p-3 border-bottom align-items-center hover-effect">
                            <div class="col-4 text-center">
                                <i class="fas fa-door-closed text-primary me-2"></i>
                                {{ room.roomName }}
                            </div>

                            <div class="col-4 text-center">
                                <a href="{{ path('app_room_info', { 'roomName': room.roomName }) }}"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i> Voir détails
                                </a>
                            </div>
                            <div class="col-4 text-center">
                                <!-- Bouton qui déclenche le modal de suppression, avec un identifiant unique -->
                                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal{{ room.id }}">
                                    <i class="fas fa-trash-alt me-1"></i> Supprimer
                                </button>
                            </div>
                        </div>

                        <!-- Modal de confirmation, avec un identifiant unique -->
                        <div class="modal fade" id="confirmDeleteModal{{ room.id }}" tabindex="-1" aria-labelledby="confirmDeleteModalLabel{{ room.id }}" aria-hidden="true">
                            <div class="modal-dialog">
                                <!-- Déplacement du formulaire ici -->
                                <form action="{{ path('app_room_delete', { 'id': room.id }) }}" method="post">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmDeleteModalLabel{{ room.id }}">Confirmation de suppression</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                                        </div>
                                        <div class="modal-body">
                                            Êtes-vous sûr de vouloir supprimer la salle "{{ room.roomName }}" ?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <button type="submit" class="btn btn-danger">Supprimer</button>
                                        </div>
                                    </div>
                                </form>
                                <!-- Fin du formulaire -->
                            </div>
                        </div>

                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
