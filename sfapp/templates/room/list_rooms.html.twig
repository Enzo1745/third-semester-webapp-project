{% extends 'base.html.twig' %}

{% block title %}Room List{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/list_rooms.css') }}">
{% endblock %}

{% block body %}
    {# Main header section with gradient background #}
    <header class="bg-primary bg-gradient text-white py-4 mb-4 shadow">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0 fw-bold">
                <i class="fas fa-building me-2"></i> Room List
            </h1>
            <div>
                <a href="/charge/salles/ajouter" class="btn btn-outline-light me-2">
                    <i class="fas fa-plus-circle me-1"></i> Add a Room
                </a>

                <a href="/charge/gestion_sa" class="btn btn-outline-light">
                    <i class="fas fa-link me-1"></i> Associate/Disassociate SA
                </a>
                <a href="/charge/salles/normes" class="btn btn-outline-light">
                    <i class="bi bi-sliders2-vertical"></i> Norms
                </a>
            </div>
        </div>
    </header>

    {# Flash messages #}
    {{ block('flash_messages') }}

    {# Search/Filter form section #}
    <div class="container mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-search text-primary me-2"></i>
                    <h5 class="card-title mb-0">Filter</h5>
                </div>
                {{ form(form) }}
            </div>
        </div>
    </div>

    {# Main content - Rooms table #}
    <div class="container">
        <div class="card shadow-sm">
            {# Table header #}
            <div class="card-header bg-primary text-white py-3">
                <div class="row text-center">
                    <div class="col-3 fw-bold">
                        <i class="fas fa-door-open me-2"></i>Rooms
                    </div>
                    <div class="col-3 fw-bold">
                        <i class="fas fa-info-circle me-2"></i>Details
                    </div>
                    <div class="col-3 fw-bold">
                        <i class="fas fa-stethoscope me-2"></i>Diagnostique
                        <button class="btn btn-sm btn-light ms-2"
                                type="button"
                                data-bs-toggle="tooltip"
                                data-bs-placement="top"
                                title="Le diagnostique révèle à quel point les normes sont respectées dans la salle. Voici leur code couleur :&#10;gris : aucun diagnostic effectuable&#10;vert : les normes de température, humidité et CO2 sont respectées&#10;jaune : une norme ou plus ne sont pas respectées&#10;rouge : aucune norme n'est respectée."
                                style="padding: 2px 6px; border-radius: 50%; cursor: pointer;">
                            <i class="fas fa-question text-primary"></i>
                        </button>
                    </div>
                    <div class="col-3 fw-bold">
                        <i class="fas fa-trash-alt me-2"></i>Delete
                    </div>
                </div>
            </div>

            {# Table body #}
            <div class="card-body p-0">
                {% if rooms is empty %}
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-inbox fa-2x mb-3"></i>
                        <p>No rooms available.</p>
                    </div>
                {% else %}
                    {% for roomWithDiagnostic in rooms %}
                        <div class="row p-3 border-bottom align-items-center hover-effect">
                            <div class="col-3 text-center">
                                <i class="fas fa-door-closed text-primary me-2"></i>
                                {{ roomWithDiagnostic.room.roomName }}
                            </div>

                            <!-- Details column -->
                            <div class="col-3 text-center">
                                <a href="{{ path('app_room_info', { 'roomName': roomWithDiagnostic.room.roomName }) }}"
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-eye me-1"></i> View details
                                </a>
                            </div>

                            <!-- Diagnostic column -->
                            <div class="col-3 text-center">
                                {% set color = 'grey' %}
                                {% if roomWithDiagnostic.diagnosticStatus == 'green' %}
                                    {% set color = 'green' %}
                                {% elseif roomWithDiagnostic.diagnosticStatus == 'yellow' %}
                                    {% set color = 'yellow' %}
                                {% elseif roomWithDiagnostic.diagnosticStatus == 'red' %}
                                    {% set color = 'red' %}
                                {% endif %}
                                <div style="width: 30px; height: 30px; background-color: {{ color }}; border-radius: 50%; display: inline-block;"></div>
                            </div>

                            <div class="col-3 text-center">
                                <!-- Button to trigger the delete modal, with a unique ID -->
                                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal{{ roomWithDiagnostic.room.id }}">
                                    <i class="fas fa-trash-alt me-1"></i> Delete
                                </button>
                            </div>
                        </div>

                        <!-- Delete confirmation modal, with a unique ID -->
                        <div class="modal fade" id="confirmDeleteModal{{ roomWithDiagnostic.room.id }}" tabindex="-1" aria-labelledby="confirmDeleteModalLabel{{ roomWithDiagnostic.room.id }}" aria-hidden="true">
                            <div class="modal-dialog">
                                <form action="{{ path('app_room_delete', { 'id': roomWithDiagnostic.room.id }) }}" method="post">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="confirmDeleteModalLabel{{ roomWithDiagnostic.room.id }}">Delete Confirmation</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            Are you sure you want to delete the room "{{ roomWithDiagnostic.room.roomName }}"?
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-danger">Delete</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
