{% extends 'base.html.twig' %}

{% block title %}Détails de la salle{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/salle_info.css') }}">
{% endblock %}

{% block body %}

    <header class="bg-primary bg-gradient text-white py-4 mb-4 shadow">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="h2 mb-0 fw-bold salle-num">
                <i class="fas fa-building me-2"></i>
                {% if room is not null %}
                    Détails de la salle {{ room.roomName }}
                {% else %}
                    Salle introuvable
                {% endif %}
            </h1>
            <div>
                {% if origin == 'technicien' %}
                    <a href="{{ path('app_technician_sa') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Retour aux Systèmes d'acquisition
                    </a>
                {% elseif origin == 'charge' %}
                    <a href="{{ path('app_room_list') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Retour à la liste des salles
                    </a>
                {% else %}
                    <a href="{{ path('app_room_list') }}" class="btn btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i> Retour
                    </a>
                {% endif %}
            </div>
        </div>
    </header>


    {# Contenu principal #}
    <div class="container">
        <div class="card shadow-sm">
            {# En-tête de la carte #}
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0">Informations de la salle</h5>
            </div>

            {# Corps de la carte #}
            <div class="card-body">

                {# Nouveau bloc avec les informations générales de la salle #}
                <div class="row mb-4">
                    <div class="col-md-4 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-door-open fa-2x text-primary mb-2"></i>
                                <h5 class="card-title">Numéro de la salle</h5>
                                <p class="card-text value">{{ room.roomName }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-door-open fa-2x text-primary mb-2"></i>
                                <h5 class="card-title">Nombre de radiateurs</h5>
                                <p class="card-text value">{{ room.nbRadiator|default('N/A') }}</p>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-window-maximize fa-2x text-primary mb-2"></i>
                                <h5 class="card-title">Nombre de fenêtres</h5>
                                <p class="card-text value">{{ room.nbWindows|default('N/A') }}</p>
                            </div>
                        </div>
                    </div>
                </div>

                {# Informations SA existantes #}
                {% if sa is null %}
                    <div class="text-center py-4 text-muted salle-details">
                        <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                        <p>Aucune donnée disponible pour cette salle.</p>
                    </div>
                {% elseif sa.state.value == 'En attente' %}
                        <div class="text-center py-4 text-muted salle-details">
                            <i class="fas fa-exclamation-circle fa-2x mb-3"></i>
                            <p>Sa en attente activation</p>
                        </div>
                {% else %}
                    <div class="detail-block">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-thermometer-half fa-2x text-primary mb-2"></i>
                                        <h5 class="card-title">Température</h5>
                                        <p class="card-text value temp
                                            {% if sa.temperature <= 20 and sa.temperature >= 17 %}
                                                good-text
                                            {% elseif sa.temperature <= 22 and sa.temperature >= 15  %}
                                                risky-text
                                            {% else %}
                                                danger-text
                                            {% endif %}">
                                            {{ sa.temperature|default('N/A') }}°
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-tint fa-2x text-primary mb-2"></i>
                                        <h5 class="card-title">Humidité</h5>
                                        <p class="card-text value humidity
                                            {% if sa.humidity <= 55 and sa.humidity >= 50 %}
                                                good-text
                                            {% elseif sa.humidity <= 60 and sa.humidity >= 45  %}
                                                risky-text
                                            {% else %}
                                                danger-text
                                            {% endif %}">
                                            {{ sa.humidity|default('N/A') }}%
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-cloud fa-2x text-primary mb-2"></i>
                                        <h5 class="card-title">CO<sub>2</sub></h5>
                                        <p class="card-text value co2
                                            {% if sa.CO2 <= 800 %}
                                                good-text
                                            {% elseif sa.CO2 <= 1200 and sa.CO2 >= 800  %}
                                                risky-text
                                            {% else %}
                                                danger-text
                                            {% endif %}">
                                            {{ sa.CO2|default('N/A') }}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
