{% extends 'base.html.twig' %}

{% block title %}Liste des salles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/list_rooms.css') }}">
{% endblock %}

{% block body %}

    <header class="bg-primary text-white p-3">
        <h1 class="mb-0">Liste des salles</h1>
        <a href="/charge/salles/ajouter"><button class="btn btn-light ml-3">Ajouter une salle</button></a>
        <a href="/charge/gestion_sa"><button class="btn btn-light ml-3">Associer/Dissocier SA</button></a>
    </header>

    <div class="container mt-4">
        {{ form(form) }}
    </div>

    <div class="container mt-4">
        <div class="row bg-light text-dark font-weight-bold">
            <div class="col-4 border">Salles</div>
            <div class="col-4 border">Détails</div>
            <div class="col-4 border">Supprimer</div>
        </div>

        {% if rooms is empty %}
            <p class="mt-3">Aucune salle n'est disponible.</p>
        {% else %}
            {% for room in rooms %}
                <div class="row">
                    <div class="col-4 border">{{ room.roomName }}</div>
                    <div class="col-4 border">
                        <a href="{{ path('app_room_info', { 'roomName': room.roomName }) }}">
                            <button class="btn btn-primary">Voir détails</button>
                        </a>
                    </div>
                    <div class="col-4 border">
                        <form action="{{ path('app_room_delete', { 'id': room.id }) }}" method="post"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette salle ?');">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>

{% endblock %}