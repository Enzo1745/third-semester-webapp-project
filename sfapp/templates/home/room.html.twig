{% extends 'base.html.twig' %}

{% block title %}Salle{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/salle_info.css') }}">
{% endblock %}

{% block body %}

    <!-- Tasks to do by the user -->
    <div class="container">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white py-3">
                <h5 class="mb-0">Actions à faire</h5>
            </div>
            <div class="card-body">
                <ul class="list-unstyled" id="actions-list">
                    <li class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <label for="message1" class="form-check-label mb-0">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                            </label>
                            <input type="checkbox" id="message1" class="form-check-input action-checkbox">
                        </div>
                    </li>
                    <li class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <label for="message2" class="form-check-label mb-0">
                                Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
                            </label>
                            <input type="checkbox" id="message2" class="form-check-input action-checkbox">
                        </div>
                    </li>
                    <li class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <label for="message3" class="form-check-label mb-0">
                                Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris.
                            </label>
                            <input type="checkbox" id="message3" class="form-check-input action-checkbox">
                        </div>
                    </li>
                    <li class="mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <label for="message4" class="form-check-label mb-0">
                                Duis aute irure dolor in reprehenderit in voluptate velit esse cillum.
                            </label>
                            <input type="checkbox" id="message4" class="form-check-input action-checkbox">
                        </div>
                    </li>
                </ul>
                <button class="btn btn-primary disabled" id="confirmButton" data-bs-toggle="modal" data-bs-target="#confirmationModal" disabled>
                    Confirmer
                </button>
            </div>
        </div>
    </div>

    <!-- Modal to confirm the tasks are done -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalLabel">Confirmation</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Avez-vous réalisé les actions sélectionnées ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Non</button>
                    <button type="button" class="btn btn-primary" id="confirmActions">Oui</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Retrieve all checkboxes and the confirmation button
        const confirmButton = document.getElementById('confirmButton');

        // Function to enable/disable the button
        function updateButtonState() {
            // Check if any checkbox is selected
            const anyChecked = document.querySelectorAll('.action-checkbox:checked').length > 0;
            confirmButton.disabled = !anyChecked; // Enable or disable the button
            confirmButton.classList.toggle('disabled', !anyChecked); // Add or remove the "disabled" class
        }

        // Add event listener to each checkbox dynamically
        document.getElementById('actions-list').addEventListener('change', function (event) {
            if (event.target.classList.contains('action-checkbox')) {
                updateButtonState();
            }
        });

        // Remove checked items when the user confirms
        document.getElementById('confirmActions').addEventListener('click', function () {
            const checkboxes = document.querySelectorAll('.action-checkbox:checked');

            // Loop through the checked checkboxes and remove their parent list items
            checkboxes.forEach(checkbox => {
                const listItem = checkbox.closest('li');
                if (listItem) {
                    listItem.remove();
                }
            });

            // Update the button state after removing tasks
            updateButtonState();

            // Close the modal
            const confirmationModal = bootstrap.Modal.getInstance(document.getElementById('confirmationModal'));
            confirmationModal.hide();
        });
    </script>



{% endblock %}
