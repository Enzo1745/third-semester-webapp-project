{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {# Flash messages #}
    {{ block('flash_messages') }}

    {# Login form #}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center py-3">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-user-circle me-2"></i>Connexion
                        </h1>
                    </div>
                    <div class="card-body p-4">
                        <form action="{{ path('app_connexion') }}" method="post">
                        {% if error %}
                            <div class="invalid-feedback">
                                {{ error }}
                            </div>
                        {% endif %}

                        {# Username field #}
                        <div class="mb-3">
                            <label for="username" class="form-label">Identifiant :</label>
                            <input type="text" id="username" name="username" value="{{ last_username }}" class="form-control" placeholder="Votre Identifiant" >
                        </div>

                        {# Password field #}
                        <div class="mb-4">
                            <label for="password" class="form-label">Mot de passe :</label>
                            <input type="password" id="password" name="password" class="form-control" placeholder="Votre mot de passe" >
                        </div>

                        {# If you want to control the URL the user is redirected to on success #}
                        <input type="hidden" name="app_home" value="{{ app.request.get('app_home') ?: '/connexion' }}">

                        {# Submit button #}
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Se connecter</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}