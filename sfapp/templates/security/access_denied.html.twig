{% extends 'base.html.twig' %}

{% block title %}Accès Refusé{% endblock %}

{% block body %}
    {# Main header section with gradient background #}
    <header class="bg-danger text-white py-4 mb-4 shadow">
        <div class="container d-flex justify-content-center align-items-center">
            <h1 class="fa-8x mb-0 fw-bold">
                <i class="fas fa-ban me-2"></i> Accès Refusé
            </h1>
        </div>
    </header>

    {# Flash messages #}
    {{ block('flash_messages') }}

    {# Login form #}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="w-100" style="max-width: 50vw;">
                <div class="card shadow-sm">
                    <div class="card-body p-4">

                        {# Username field #}
                        <div class="text-center flex-grow-1 mb-4">
                            <a href="{{ path('app_home') }}" class="btn btn-danger ms-2">
                                <i class="fas fa-home me-1"></i> Retour à la page d'accueil
                            </a>
                        </div>
                        {% if is_granted('ROLE_CHARGE') in roles %}
                            <div class="text-center flex-grow-1">
                                <a href="{{ path('app_room_list') }}" class="btn btn-danger ms-2">
                                    <i class="fas fa-home me-1"></i> Retour à la liste des salles
                                </a>
                            </div>
                        {% elseif is_granted('ROLE_TECH') in roles %}
                            <div class="text-center flex-grow-1">
                                <a href="{{ path('app_technician_sa') }}" class="btn btn-danger ms-2">
                                    <i class="fas fa-home me-1"></i> Retour à la liste des SA
                                </a>
                            </div>
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}